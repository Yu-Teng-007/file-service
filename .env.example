# Server Configuration
PORT=3001
NODE_ENV=development

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=100MB
TEMP_DIR=temp

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
API_KEY=your-api-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://192.168.14.138:3000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Redis Cache Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# CDN Configuration
CDN_PROVIDER=local
CDN_REGION=
CDN_BUCKET=
CDN_ACCESS_KEY_ID=
CDN_ACCESS_KEY_SECRET=
CDN_ENDPOINT=
CDN_CUSTOM_DOMAIN=
CDN_ENABLE_HTTPS=true

# Monitoring Configuration
MONITORING_ACCESS_LOGGING=true
MONITORING_PERFORMANCE=true
MONITORING_STORAGE=true
MONITORING_LOG_RETENTION_DAYS=30
MONITORING_METRICS_RETENTION_DAYS=90

# Versioning Configuration
VERSIONING_MAX_VERSIONS=10
VERSIONING_AUTO_ENABLED=true
VERSIONING_RETENTION_DAYS=90
VERSION_STORAGE_DIR=versions

# Image Processing Configuration
IMAGE_PROCESSING_ENABLED=true
IMAGE_MAX_SIZE=50MB
IMAGE_QUALITY_DEFAULT=80

# Compression Configuration
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# File Type Limits (in bytes)
MAX_IMAGE_SIZE=10485760
MAX_SCRIPT_SIZE=5242880
MAX_STYLE_SIZE=2097152
MAX_FONT_SIZE=5242880
MAX_DOCUMENT_SIZE=20971520
MAX_MUSIC_SIZE=52428800

# Storage Provider (local, aws, aliyun)
STORAGE_PROVIDER=local

# AWS S3 Configuration (if using AWS)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# Aliyun OSS Configuration (if using Aliyun)
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_OSS_REGION=
ALIYUN_OSS_BUCKET=

# Cache Configuration
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Database (if needed for metadata storage)
DATABASE_URL=sqlite:./data/fileservice.db

# Security Features
ENABLE_VIRUS_SCAN=false
VIRUS_SCAN_API_KEY=

# CDN Configuration
CDN_URL=
ENABLE_CDN=false
