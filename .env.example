# Server Configuration
PORT=3001
NODE_ENV=development

# File Storage Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=100MB
TEMP_DIR=temp

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
API_KEY=your-api-key-here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://192.168.14.138:3000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# File Type Limits (in bytes)
MAX_IMAGE_SIZE=10485760
MAX_SCRIPT_SIZE=5242880
MAX_STYLE_SIZE=2097152
MAX_FONT_SIZE=5242880
MAX_DOCUMENT_SIZE=20971520
MAX_MUSIC_SIZE=52428800

# Storage Provider (local, aws, aliyun)
STORAGE_PROVIDER=local

# AWS S3 Configuration (if using AWS)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# Aliyun OSS Configuration (if using Aliyun)
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_OSS_REGION=
ALIYUN_OSS_BUCKET=

# Cache Configuration
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# Logging
LOG_LEVEL=info
LOG_DIR=logs

# Database (if needed for metadata storage)
DATABASE_URL=sqlite:./data/fileservice.db

# Security Features
ENABLE_VIRUS_SCAN=false
VIRUS_SCAN_API_KEY=

# CDN Configuration
CDN_URL=
ENABLE_CDN=false
