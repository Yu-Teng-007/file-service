# 服务器配置
PORT=3001
NODE_ENV=development

# 文件存储配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=100MB
TEMP_DIR=temp

# 安全配置
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
API_KEY=your-api-key-here

# CORS 配置
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://192.168.14.138:3000

# 速率限制
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Redis 缓存配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# CDN 配置
CDN_PROVIDER=local
CDN_REGION=
CDN_BUCKET=
CDN_ACCESS_KEY_ID=
CDN_ACCESS_KEY_SECRET=
CDN_ENDPOINT=
CDN_CUSTOM_DOMAIN=
CDN_ENABLE_HTTPS=true

# 监控配置
MONITORING_ACCESS_LOGGING=true
MONITORING_PERFORMANCE=true
MONITORING_STORAGE=true
MONITORING_LOG_RETENTION_DAYS=30
MONITORING_METRICS_RETENTION_DAYS=90

# 版本控制配置
VERSIONING_MAX_VERSIONS=10
VERSIONING_AUTO_ENABLED=true
VERSIONING_RETENTION_DAYS=90
VERSION_STORAGE_DIR=versions

# 图片处理配置
IMAGE_PROCESSING_ENABLED=true
IMAGE_MAX_SIZE=50MB
IMAGE_QUALITY_DEFAULT=80

# 压缩配置
COMPRESSION_ENABLED=true
COMPRESSION_LEVEL=6

# 文件类型大小限制（字节）
MAX_IMAGE_SIZE=10485760
MAX_SCRIPT_SIZE=5242880
MAX_STYLE_SIZE=2097152
MAX_FONT_SIZE=5242880
MAX_DOCUMENT_SIZE=20971520
MAX_MUSIC_SIZE=52428800

# 存储提供商（local, aws, aliyun）
STORAGE_PROVIDER=local

# AWS S3 配置（如果使用 AWS）
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=
AWS_S3_BUCKET=

# 阿里云 OSS 配置（如果使用阿里云）
ALIYUN_ACCESS_KEY_ID=
ALIYUN_ACCESS_KEY_SECRET=
ALIYUN_OSS_REGION=
ALIYUN_OSS_BUCKET=

# 缓存配置
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# 日志配置
LOG_LEVEL=info
LOG_DIR=logs

# 数据库配置（如果需要元数据存储）
DATABASE_URL=sqlite:./data/fileservice.db

# 安全功能
ENABLE_VIRUS_SCAN=false
VIRUS_SCAN_API_KEY=

# CDN 配置
CDN_URL=
ENABLE_CDN=false
